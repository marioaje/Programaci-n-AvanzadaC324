@page
@model GestionUsuariosRazor.Pages.Usuarios.RegistroModel
@{

    //ViewBag para cuando ocupemos variables desde el controlador hacia la vista.
    ViewData["Title"] = "Registro usuarios";

}

<h1>Registro de usuarios</h1>

<form method="post">

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" placeholder="name@example.com">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Usuario</label>
        <input type="text" class="form-control" id="Name" name="Name" placeholder="Ingrese su usuario">
    </div>
    <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label">Clave</label>
        <input type="password" class="form-control" id="Password" name="Password" placeholder="">
    </div>

    @* <button type="submit" >Enviamos la informacion</button> *@
    <button type="submit">Registrar</button>
</form>

@if (Model.Mensaje != null ){
    <p>@Model.Mensaje</p>
}

